        // DOM Elements
        const topNavButtons = document.querySelectorAll('.nav-btn');
        const secondaryNav = document.getElementById('secondary-nav');
        const gallery = document.getElementById('gallery');
        const dailyVisitors = document.getElementById('daily-visitors');
        const currentVisitors = document.getElementById('current-visitors');

        // Initialize with default category
        let currentCategory = 'personal';
        let currentSubcategory = 'all';

        // Update visitor counters
        function updateVisitorCounters() {
            // Generate random numbers for demonstration
            const dailyCount = Math.floor(Math.random() * 500) + 1000;
            const currentCount = Math.floor(Math.random() * 50) + 20;
            
            dailyVisitors.textContent = dailyCount.toLocaleString();
            currentVisitors.textContent = currentCount;
        }

        // Update secondary navigation
        function updateSecondaryNav(category) {
            secondaryNav.innerHTML = '';
            
            // Add "All" button
            const allButton = document.createElement('button');
            allButton.className = `sec-nav-btn ${currentSubcategory === 'all' ? 'active' : ''}`;
            allButton.textContent = 'All';
            allButton.dataset.subcategory = 'all';
            allButton.addEventListener('click', () => {
                currentSubcategory = 'all';
                updateSecondaryNav(currentCategory);
                renderGallery();
            });
            secondaryNav.appendChild(allButton);
            
            // Add category-specific buttons
            galleryData[category].subcategories.forEach(subcat => {
                const button = document.createElement('button');
                button.className = `sec-nav-btn ${currentSubcategory === subcat ? 'active' : ''}`;
                button.textContent = subcat;
                button.dataset.subcategory = subcat;
                button.addEventListener('click', () => {
                    currentSubcategory = subcat;
                    updateSecondaryNav(currentCategory);
                    renderGallery();
                });
                secondaryNav.appendChild(button);
            });
        }

        // Render gallery items
        function renderGallery() {
            gallery.innerHTML = '';
            
            const categoryItems = galleryData[currentCategory].items;
            
            categoryItems.forEach(item => {
                // Check if item matches current filters
                const toolCheckbox = document.querySelector(`input[name="tool"][value="${item.tool.toLowerCase().replace(' ', '-')}"]`);
                const licenseRadio = document.querySelector('input[name="license"]:checked');
                
                if (!toolCheckbox.checked) return;
                if (licenseRadio.value !== 'all' && item.license !== licenseRadio.value) return;
                
                const card = document.createElement('div');
                card.className = 'card';
                
                card.innerHTML = `
                    <img src="${item.image}" alt="${item.prompt}" class="card-image">
                    <div class="card-content">
                        <div class="tool-name">
                            ${item.tool} <i>â†’</i>
                        </div>
                        <p class="prompt-text">${item.prompt}</p>
                        <div class="card-actions">
                            <button class="btn btn-copy" data-prompt="${item.prompt}">
                                <span>Copy</span>
                            </button>
                            <button class="btn btn-download">
                                <span>Download</span>
                            </button>
                        </div>
                    </div>
                `;
                
                // Add event listeners for buttons
                const copyBtn = card.querySelector('.btn-copy');
                const downloadBtn = card.querySelector('.btn-download');
                
                copyBtn.addEventListener('click', () => {
                    navigator.clipboard.writeText(item.prompt).then(() => {
                        // Visual feedback for copy
                        const originalText = copyBtn.innerHTML;
                        copyBtn.innerHTML = '<span>Copied!</span>';
                        setTimeout(() => {
                            copyBtn.innerHTML = originalText;
                        }, 1500);
                    });
                });
                
                downloadBtn.addEventListener('click', () => {
                    // In a real app, this would trigger a download
                    alert(`Downloading image generated with: ${item.tool}`);
                });
                
                gallery.appendChild(card);
            });
        }

        // Initialize the page
        function init() {
            updateVisitorCounters();
            updateSecondaryNav(currentCategory);
            renderGallery();
            
            // Add event listeners to top navigation
            topNavButtons.forEach(button => {
                button.addEventListener('click', () => {
                    // Update active state
                    topNavButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    
                    // Update current category
                    currentCategory = button.dataset.category;
                    currentSubcategory = 'all';
                    
                    // Update UI
                    updateSecondaryNav(currentCategory);
                    renderGallery();
                });
            });
            
            // Add event listeners to filter controls
            const filterInputs = document.querySelectorAll('input[name="tool"], input[name="license"]');
            filterInputs.forEach(input => {
                input.addEventListener('change', renderGallery);
            });
        }

        // Start the application
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
